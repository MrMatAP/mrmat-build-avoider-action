{
    "name": "mrmat-build-avoider-action",
    "description": "A GitHub Action to avoid builds on push when there is a corresponding PR",
    "version": "0.0.0",
    "author": "MrMat",
    "license": "MIT",
    "type": "module",
    "private": true,
    "homepage": "https://github.com/MrMatAP/mrmat-build-avoider-action",
    "repository": {
        "type": "git",
        "url": "https://github.com//MrMatAP/mrmat-build-avoider-action.git"
    },
    "bugs": {
        "url": "https://github.com//MrMatAP/mrmat-build-avoider-action/issues"
    },
    "keywords": [
        "actions"
    ],
    "exports": {
        ".": "./dist/index.js"
    },
    "engines": {
        "node": ">=24.0.0"
    },
    "scripts": {
        "bundle": "npm run format:write && npm run package",
        "format:write": "npx prettier --write .",
        "format:check": "npx prettier --check .",
        "ci-lint": "npx eslint . --format @microsoft/eslint-formatter-sarif --output-file build/lint.sarif --debug",
        "lint": "npx eslint .",
        "package": "npx rollup --config rollup.config.js --configPlugin @rollup/plugin-typescript",
        "ci-test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
        "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest"
    },
    "dependencies": {
        "@actions/core": "^1.11.1",
        "@actions/github": "^6.0.1"
    },
    "devDependencies": {
        "@github/local-action": "^6.0.0",
        "@jest/globals": "^30.1.2",
        "@rollup/plugin-commonjs": "^28.0.6",
        "@rollup/plugin-node-resolve": "^16.0.1",
        "@rollup/plugin-typescript": "^12.1.4",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.3.1",
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.36.0",
        "@stylistic/eslint-plugin": "^5.4.0",
        "@microsoft/eslint-formatter-sarif": "^3.1.0",
        "typescript-eslint": "^8.44.1",
        "@typescript-eslint/parser": "^8.44.1",
        "eslint": "^9.36.0",
        "eslint-plugin-jest": "^29.0.1",
        "jest": "^30.1.3",
        "jest-junit": "^16.0.0",
        "jiti": "^2.6.1",
        "prettier": "^3.6.2",
        "prettier-eslint": "^16.4.2",
        "rollup": "^4.50.1",
        "ts-jest": "^29.4.1",
        "ts-jest-resolver": "^2.0.1",
        "typescript": "^5.9.2"
    }
}
